<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardviewid"
    android:background="#dddddd"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    android:layout_height="wrap_content">
    
  <LinearLayout
      android:padding="20dp"
      android:background="#fff"
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >
      <TextView
          android:text="Order#100"
          android:textColor="#000"
          android:id="@+id/orderid"
          android:textSize="16sp"
          android:fontFamily="@font/heebovariablefont_wght"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          />
      <TextView
          android:id="@+id/orderdateid"
          android:layout_marginTop="10dp"
          android:text="20-Jan-2020, 3:00 PM"
          android:textColor="#7A000000"
          android:textSize="14sp"
          android:fontFamily="@font/heebovariablefont_wght"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          />

      <TextView
          android:id="@+id/deliverid"
          android:layout_marginTop="25dp"
          android:text="Delivered on 21-Jan-2020"
          android:textColor="#DB504A"
          android:textSize="14sp"
          android:fontFamily="@font/heebovariablefont_wght"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          />


  </LinearLayout>
    <RelativeLayout
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/detailsid"
            android:textAlignment="center"
            android:fontFamily="@font/heebovariablefont_wght"
            android:textSize="12sp"
            android:padding="5dp"
            android:textColor="#7E000000"
            android:text="See details   >"
            android:background="@drawable/card_wishlist_design"
            android:layout_alignParentRight="true"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>

</androidx.cardview.widget.CardView>