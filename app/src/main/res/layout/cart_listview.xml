<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:id="@+id/cardid"
    android:layout_margin="5dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:background="#fff"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageid"
            android:layout_width="120dp"
            android:layout_height="120dp"
            >

        </ImageView>

        <LinearLayout
            android:paddingBottom="-10dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            >
            <TextView
                android:textAlignment="viewStart"
                android:layout_marginLeft="20dp"
                android:id="@+id/nameid"
                android:fontFamily="@font/prataregular"
                android:layout_below="@id/imageid"
                android:text="Cup cake"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_marginLeft="20dp"
                android:id="@+id/descriptionid"
                android:layout_below="@id/nameid"
                android:text="Large Size"
                android:textColor="#94000000"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <LinearLayout
                android:layout_marginLeft="20dp"
                android:id="@+id/linearlayout"
                android:layout_marginTop="5dp"
                android:layout_below="@id/descriptionid"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                >
                <ImageView
                    android:layout_marginTop="2dp"
                    android:background="@drawable/rupee"
                    android:layout_weight="0.5"
                    android:layout_gravity="center"
                    android:layout_width="15dp"
                    android:layout_height="17dp"
                    />
                <TextView
                    android:layout_marginLeft="5dp"
                    android:textColor="#000"
                    android:text="price"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:fontFamily="@font/heebovariablefont_wght"
                    android:id="@+id/priceid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="15dp"
                android:layout_below="@id/descriptionid"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:orientation="horizontal"
                >
                <ImageButton
                    android:background="@drawable/card_shopnow"
                    android:src="@drawable/ic_baseline_minimize_24"
                    android:layout_marginTop="5dp"
                    android:paddingBottom="15dp"
                    android:layout_below="@id/recyclerviewid"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/minusid"
                    android:layout_alignParentRight="true"
                    />

                <TextView
                    android:id="@+id/quantityid"
                    android:textAlignment="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="5dp"
                    android:text="1"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    />
                <ImageButton
                    android:background="@drawable/card_shopnow"
                    android:src="@drawable/ic_baseline_add_24"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_below="@id/recyclerviewid"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/plusid"
                    android:layout_alignParentRight="true"
                    />

            </LinearLayout>

        </LinearLayout>



    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <ImageButton
            android:id="@+id/deleteid"
            android:src="@drawable/cancal"
            android:layout_alignParentRight="true"
            android:background="@drawable/delete_cart_design"
            android:layout_width="25dp"
            android:layout_height="25dp"
            >

        </ImageButton>

    </RelativeLayout>


</androidx.cardview.widget.CardView>