<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dddddd"
    tools:context=".VerificationActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:id="@+id/applayoutid"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:background="#4F6D7A"
            android:id="@+id/toolbar"
            app:titleTextColor="#fff"
            app:title="SignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </com.google.android.material.appbar.AppBarLayout>
    <LinearLayout
        android:layout_below="@id/applayoutid"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <TextView
        android:fontFamily="@font/heebovariablefont_wght"
        android:textSize="16sp"
        android:layout_marginTop="40dp"
        android:textAlignment="center"
        android:textColor="#000"
        android:text="@string/ver_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
        <TextView
            android:fontFamily="@font/heebovariablefont_wght"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textColor="#000"
            android:text="+91 7999107995"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            android:textColor="#DB504A"
            android:fontFamily="@font/heebovariablefont_wght"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:textAlignment="center"
            android:text="Edit number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            android:fontFamily="@font/heebovariablefont_wght"
            android:textSize="16sp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="40dp"
            android:text="Enter code"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <EditText
                android:id="@+id/otp1"
                android:textAlignment="center"
                android:maxLength="1"
                android:inputType="number"
                android:textColor="#000"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:layout_width="45dp"
                android:layout_height="43dp"
                />
            <EditText
                android:id="@+id/otp2"
                android:textAlignment="center"
                android:textColor="#000"
                android:maxLength="1"
                android:inputType="number"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="45dp"
                android:layout_height="43dp"
                />
            <EditText
                android:id="@+id/otp3"
                android:textColor="#000"
                android:textAlignment="center"
                android:maxLength="1"
                android:inputType="number"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="45dp"
                android:layout_height="43dp"
                />
            <EditText
                android:id="@+id/otp4"
                android:textColor="#000"
                android:textAlignment="center"
                android:maxLength="1"
                android:inputType="number"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="45dp"
                android:layout_height="43dp"
                />
            <EditText
                android:id="@+id/otp5"
                android:textColor="#000"
                android:textAlignment="center"
                android:maxLength="1"
                android:inputType="number"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="45dp"
                android:layout_height="43dp"
                />
            <EditText
                android:id="@+id/otp6"
                android:textColor="#000"
                android:textAlignment="center"
                android:maxLength="1"
                android:inputType="number"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="45dp"
                android:layout_height="43dp"
                />
        </LinearLayout>
        <TextView
            android:fontFamily="@font/heebovariablefont_wght"
            android:textSize="16sp"
            android:layout_marginTop="50dp"
            android:textColor="#000"
            android:layout_marginLeft="40dp"
            android:text="Time remaining 2:40"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <Button
            android:id="@+id/submitid"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="50dp"
            android:layout_below="@id/layoutaddid"
            android:text="Submit"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:textAlignment="center"
            android:background="@drawable/card_shopnow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </LinearLayout>
</RelativeLayout>